{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "east5th.template",
  "Resources": {
    "s3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Sub": "east5th-${AWS::AccountId}"
        },
        "PublicAccessBlockConfiguration": {
          "BlockPublicAcls": false,
          "BlockPublicPolicy": false,
          "IgnorePublicAcls": false,
          "RestrictPublicBuckets": false
        },
        "WebsiteConfiguration": {
          "IndexDocument": "index.html"
        }
      }
    },
    "s3BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "s3Bucket"
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "PublicReadGetObject",
              "Effect": "Allow",
              "Principal": "*",
              "Action": [
                "s3:GetObject"
              ],
              "Resource": [
                {
                  "Fn::Sub": "arn:aws:s3:::${s3Bucket}/*"
                }
              ]
            }
          ]
        }
      }
    },
    "githubConnection": {
      "Type": "AWS::CodeStarConnections::Connection",
      "Properties": {
        "ConnectionName": "east5th",
        "ProviderType": "GitHub"
      }
    },
    "githubConnectionArn": {
      "Type": "AWS::SSM::Parameter",
      "Properties": {
        "Name": "/east5th/github-connection-arn",
        "Type": "String",
        "Value": {
          "Fn::GetAtt": [
            "githubConnection",
            "ConnectionArn"
          ]
        }
      }
    },
    "artifactBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Sub": "east5th-${AWS::AccountId}-artifacts"
        }
      }
    },
    "artifactBucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "artifactBucket"
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "DenyUnEncryptedObjectUploads",
              "Effect": "Deny",
              "Principal": "*",
              "Action": "s3:PutObject",
              "Resource": {
                "Fn::Sub": "${artifactBucket.Arn}/*"
              },
              "Condition": {
                "StringNotEquals": {
                  "s3:x-amz-server-side-encryption": "aws:kms"
                }
              }
            },
            {
              "Sid": "DenyInsecureConnections",
              "Effect": "Deny",
              "Principal": "*",
              "Action": "s3:*",
              "Resource": {
                "Fn::Sub": "${artifactBucket.Arn}/*"
              },
              "Condition": {
                "Bool": {
                  "aws:SecureTransport": false
                }
              }
            }
          ]
        }
      }
    },
    "pipelineRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "codepipeline.amazonaws.com"
                ]
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "AllowRunCodePipeline",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "codestar-connections:*",
                    "iam:PassRole",
                    "logs:*",
                    "s3:*",
                    "ssm:*"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "codePipeline": {
      "Type": "AWS::CodePipeline::Pipeline",
      "Properties": {
        "ArtifactStore": {
          "Type": "S3",
          "Location": {
            "Ref": "artifactBucket"
          }
        },
        "Name": "www.east5th.co",
        "RoleArn": {
          "Fn::GetAtt": [
            "pipelineRole",
            "Arn"
          ]
        },
        "Stages": [
          {
            "Name": "Source",
            "Actions": [
              {
                "Name": "Source",
                "ActionTypeId": {
                  "Category": "Source",
                  "Owner": "AWS",
                  "Provider": "CodeStarSourceConnection",
                  "Version": 1
                },
                "Configuration": {
                  "BranchName": "main",
                  "ConnectionArn": {
                    "Fn::GetAtt": [
                      "githubConnectionArn",
                      "Value"
                    ]
                  },
                  "FullRepositoryId": "East5th/www.east5th.co"
                },
                "OutputArtifacts": [
                  {
                    "Name": "SourceOutput"
                  }
                ]
              }
            ]
          },
          {
            "Name": "Compute",
            "Actions": [
              {
                "Name": "Compute",
                "ActionTypeId": {
                  "Category": "Compute",
                  "Owner": "AWS",
                  "Provider": "Commands",
                  "Version": 1
                },
                "Commands": [
                  "echo filtering input"
                ],
                "InputArtifacts": [
                  {
                    "Name": "SourceOutput"
                  }
                ],
                "OutputArtifacts": [
                  {
                    "Name": "ComputeOutput",
                    "Files": [
                      "public/**",
                      "index.html",
                      "global.css"
                    ]
                  }
                ]
              }
            ]
          },
          {
            "Name": "Deploy",
            "Actions": [
              {
                "ActionTypeId": {
                  "Category": "Deploy",
                  "Owner": "AWS",
                  "Provider": "S3",
                  "Version": "1"
                },
                "Configuration": {
                  "BucketName": {
                    "Ref": "s3Bucket"
                  },
                  "Extract": true
                },
                "InputArtifacts": [
                  {
                    "Name": "ComputeOutput"
                  }
                ],
                "Name": "DeployToS3"
              }
            ]
          }
        ],
        "Triggers": [
          {
            "GitConfiguration": {
              "Push": [
                {
                  "Branches": {
                    "Includes": [
                      "main"
                    ]
                  }
                }
              ],
              "SourceActionName": "Source"
            },
            "ProviderType": "CodeStarSourceConnection"
          }
        ]
      }
    }
  }
}
